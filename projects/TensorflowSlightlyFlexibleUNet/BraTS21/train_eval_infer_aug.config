; train_eval_infer.config
; BraTS21, GENERATOR_MODE=True
; 2024/02/16 (C) antillia.com
[model]
generator     = True
image_width    = 256
image_height   = 256
image_channels = 3
num_classes    = 1
base_filters   = 16
base_kernels   = (3,3)
num_layers     = 8
dropout_rate   = 0.08
learning_rate  = 0.0001

clipvalue      = 0.5
dilation       = (2,2)
;loss           = "binary_crossentropy"
loss           = "bce_iou_loss"
;metrics        = ["iou_coef"]
;metrics        = ["binary_accuracy", "sensitivity", "specificity"]
metrics        = ["binary_accuracy"]
show_summary   = False

[train]
epochs        = 100
batch_size    = 4
steps_per_epoch  = 400
validation_steps = 200
patience      = 10
;metrics       = ["iou_coef", "val_iou_coef"]
metrics       = ["binary_accuracy", "val_binary_accuracy"]

model_dir     = "./models"
eval_dir      = "./eval"

image_datapath = "../../../dataset/BraTS21/train/images/"
mask_datapath  = "../../../dataset/BraTS21/train/masks/"

create_backup  = False
learning_rate_reducer = False
save_weights_only = True


# On GENERATOR_MODE, valid dataset of [eval] section will be used to train unet model.
[eval]
image_datapath = "../../../dataset/BraTS21/valid/images/"
mask_datapath  = "../../../dataset/BraTS21/valid/masks/"

# ON GENERATOR_MODE, dataset of [test] section will be used to evaluate the trained unnet model.
[test] 
image_datapath = "../../../dataset/BraTS21/test/images/"
mask_datapath  = "../../../dataset/BraTS21/test/masks/"

[infer] 
images_dir    = "../../../dataset/BraTS21/test/images/"
output_dir    = "./test_output"
merged_dir    = "./test_output_merged"

[mask]
blur      = True
blur_size = (3,3)
binarize  = True
threshold = 128
#threshold = 74

[generator]
debug     = True
augmentation   = True

[augmentor]
vflip    = False
hflip    = False
rotation = True
angles   = [5, 10,]
shrinks  = [0.8]
shears   = [0.2]
transformer = True
alpah       = 1300
sigmoid     = 8
